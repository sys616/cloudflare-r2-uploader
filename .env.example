# Cloudflare R2 Credentials
# بيانات الاعتماد الخاصة بكلاودفلير R2
AWS_ACCESS_KEY_ID=your-access-key-id    # مفتاح الوصول (Access Key ID)
AWS_SECRET_ACCESS_KEY=your-secret-access-key    # المفتاح السري (Secret Access Key)
AWS_DEFAULT_REGION=auto    # المنطقة (Region) - عادة 'auto'
AWS_BUCKET=your-bucket-name    # اسم البكت (Bucket Name)
AWS_ENDPOINT=https://<accountid>.r2.cloudflarestorage.com    # نقطة النهاية (S3 Endpoint)
PUBLIC_BUCKET_URL=https://your-public-domain.com    # رابط البكت العام (Public Bucket URL)
